subdir = src
top_builddir = ..
include Makefile.global


all install installdirs uninstall dep depend:
	$(MAKE) -C backend $@
	$(MAKE) -C include $@
	$(MAKE) -C interfaces $@
	$(MAKE) -C bin $@
	$(MAKE) -C pl $@

clean:
	$(MAKE) -C backend $@
	$(MAKE) -C include $@
	$(MAKE) -C interfaces $@
	$(MAKE) -C bin $@
	$(MAKE) -C pl $@
	$(MAKE) -C utils $@
	$(MAKE) -C test clean

distclean maintainer-clean:
	-$(MAKE) -C utils $@
	-$(MAKE) -C backend $@
	-$(MAKE) -C include $@
	-$(MAKE) -C interfaces $@
	-$(MAKE) -C bin $@
	-$(MAKE) -C pl $@
	-$(MAKE) -C test clean
	rm -f test/regress/GNUmakefile
	rm -f Makefile.port Makefile.global GNUmakefile
